{
  "include": ["src/**/*", "src/types"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES2021.String"]
  },
  "typeRoots": ["./src/types", "./node_modules/@types"]
}
